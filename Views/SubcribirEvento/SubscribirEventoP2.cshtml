@model List<EmPoderTIC.Models.EVENTO>


@{
    ViewBag.Title = "Programa Más Mujeres En Las TICs";
}

@if (Session["TipoPerfil"] != null && Session["TipoPerfil"].ToString() == "Docente")
{
    Layout = "~/Views/Shared/_LayoutPerfil2.cshtml";
}
else
{
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

@if (Session["TipoPerfil"] != null && Session["TipoPerfil"].ToString() == "Docente")
{
    <link rel="stylesheet" href="~/Content/css/subscribir_evento.css">

    <!-- Container (Pricing Section) -->
    <div style="margin-bottom: 5%;" id="pricing" class="container-fluid">
        <div class="text-center">
            <h2>Eventos Disponibles</h2>
        </div>

        <div class="row slideanim">
            @foreach (var evento in Model)
            {
                <div class="col-sm-4">
                    <div class="panel panel-default text-center">
                        <div class="panel-heading">
                            <h1>@evento.nombre</h1>
                        </div>
                        <div class="panel-body" style="padding-bottom: 10px;">
                            <p><img src="@evento.imagen_url_evento" alt="" class="event-image"></p>
                            <p><strong>Descripción: </strong> @evento.descripcion</p>
                            <p><strong>Tipo Evento: </strong> @evento.tipo_evento</p>
                            <p><strong>Fecha: </strong> @evento.fecha_evento.ToString("dd-MM-yyyy")</p>
                            <p><strong>Hora: </strong> @evento.hora_evento</p>
                            <p><strong>Lugar: </strong> @evento.lugar_evento</p>
                            <p><strong>Area Asociada: </strong> @evento.AREA.area_conocimiento</p>
                            <p><strong>Competencia Asociada: </strong> @evento.COMPETENCIA.competencia_conocimiento</p>
                        </div>
       
                    </div>
                </div>

            }
        </div>




    </div>



    <!-- Asegúrate de incluir jQuery y Bootstrap al final de tu vista -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
else
{
    <link rel="stylesheet" href="~/Content/css/accesodenegado.css">
    <div id="header">
        <h1> Acceso denegado. Esta vista solo está disponible para Docente</h1>
        <br />
        <a href="@Url.Action("Login", "Account")" class="btn-acceso">Iniciar Sesión</a>
    </div>
}
