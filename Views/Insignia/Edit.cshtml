@model EmPoderTIC.Models.INSIGNIA

@{
    ViewBag.Title = "Edit";
}


@if (Session["TipoPerfil"] != null && Session["TipoPerfil"].ToString() == "Administrador")
{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
else
{
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}


@if (Session["TipoPerfil"] != null && Session["TipoPerfil"].ToString() == "Administrador")
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/CRUD_create_edit.css">

    using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()
        <div class="container-formularios">
            <div class="form-container">
                <h2>Editar Insignia</h2>
                <form>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.insignia_id)
                    <div class="form-group">
                        @Html.LabelFor(model => model.nombre, "Nombre: ", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.descripción, "Descripción: ", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.descripción, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.descripción, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.objetivo, "Objetivo: ", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.objetivo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.objetivo, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.imagen_url, "URL Insignia: ", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.imagen_url, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.imagen_url, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NIVEL_nivel_id, "Nivel Insignia: ", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("NIVEL_nivel_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.NIVEL_nivel_id, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.AREA_area_id, "Area de Conocimiento: ", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("AREA_area_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.AREA_area_id, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.COMPETENCIA_competencia_id, "Competencia: ", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("COMPETENCIA_competencia_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.COMPETENCIA_competencia_id, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CERTIFICACION_certificacion_id, "CERTIFICACION_certificacion_id", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("CERTIFICACION_certificacion_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CERTIFICACION_certificacion_id, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.TIPO_PERFIL_tipo_perfil_id, "TIPO_PERFIL_tipo_perfil_id", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("TIPO_PERFIL_tipo_perfil_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TIPO_PERFIL_tipo_perfil_id, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.EVENTO_evento_id, "EVENTO_evento_id", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("EVENTO_evento_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EVENTO_evento_id, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar Cambios" class="btn btn-primary-custom" />
                    </div>
                    <div>
                        <a href="@Url.Action("Index")" class="btn-custom">Volver a la lista</a>
                    </div>
                </form>
            </div>
        </div>
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
}

else
{
    <link rel="stylesheet" href="~/Content/css/accesodenegado.css">
    <div id="header">
        <h1> Acceso denegado. Esta vista solo está disponible para Administrador</h1>
        <br />
        <a href="@Url.Action("Login", "Account")" class="btn-acceso">Iniciar Sesión</a>
    </div>
}