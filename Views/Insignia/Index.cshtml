@model IEnumerable<EmPoderTIC.Models.INSIGNIA>

@{
    ViewBag.Title = "Index";

}


@if (Session["TipoPerfil"] != null && Session["TipoPerfil"].ToString() == "Administrador")
{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
else
{
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}


@if (Session["TipoPerfil"] != null && Session["TipoPerfil"].ToString() == "Administrador")
{
    <link rel="stylesheet" href="~/Content/css/CRUD.css">


    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Gestión de <b>Insignias</b></h2>
                        </div>

                        <div class="col-sm-6">
                            <a href="@Url.Action("Create")" class="btn btn-success">
                                <i class="material-icons">&#xE147;</i>
                                Crear Nueva Insignia
                            </a>

                            <a href="#" class="icon" data-url="#">
                                <i class="icons" data-toggle="tooltip" title="Instructivo" style="color:aliceblue; font-size:35px; margin-left: 62%; margin-bottom:5%;">&#xf111;</i>
                                <span style="display: none;">Edit</span>
                            </a>

                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th> Nombre </th>
                            <th> Descripción</th>
                            <th> Objetivo </th>
                            <th> URL de Isignia </th>
                            <th> Area de Conocimiento </th>
                            <th> Certificación </th>
                            <th> Competencia </th>
                            <th> Evento </th>
                            <th> Nivel </th>
                            <th> Tipo de Perfil </th>
                            <th> Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.descripción)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.objetivo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.imagen_url)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AREA.area_conocimiento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CERTIFICACION.certificacion_id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.COMPETENCIA.competencia_conocimiento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EVENTO.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NIVEL.categoría_nivel_insignia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TIPO_PERFIL.nombre_tipo_perfil)
                                </td>
                                <td>
                                    @if (item.activo)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </td>
                                <td>
                                    <!-- Enlace "Edit" dentro de un botón -->
                                    <a href="#" class="edit" data-url="@Url.Action("Edit", new { id = item.insignia_id })">
                                        <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
                                        <span style="display: none;">Edit</span>
                                    </a>

                                    <button class="btn btn-lg toggle-estado" data-url="@Url.Action("ToggleEstado", new { id = item.insignia_id })">
                                        <span class="icon">
                                            <i class="material-icons on" style="font-size: 1.5em; color: #4CAF50; display: @(item.activo ? "inline-block" : "none")">toggle_on</i>
                                            <i class="material-icons off" style="font-size: 1.5em; color: #e74c3c; display: @(!item.activo ? "inline-block" : "none")">toggle_off</i>
                                        </span>
                                        <span style="display: none;">Toggle Estado</span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalDelete"></div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $(".toggle-estado").click(function (e) {
                e.preventDefault();

                var url = $(this).data("url");

                // Realizar la petición AJAX para cambiar el estado
                $.post(url, function () {
                    // Recargar la página después de cambiar el estado
                    location.reload();
                });
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $(".edit").click(function (e) {
                e.preventDefault(); // Prevenir el comportamiento predeterminado del enlace

                var url = $(this).data("url"); // Obtener la URL de data-url

                // Redirigir a la vista "Edit"
                window.location.href = url;
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $(".delete").click(function (e) {
                e.preventDefault(); // Prevenir el comportamiento predeterminado del enlace

                var url = $(this).data("url"); // Obtener la URL de data-url

                // Redirigir a la vista "Edit"
                window.location.href = url;
            });
        });
    </script>

}

else
{
    <link rel="stylesheet" href="~/Content/css/accesodenegado.css">
    <div id="header">
        <h1> Acceso denegado. Esta vista solo está disponible para Administrador</h1>
        <br />
        <a href="@Url.Action("Login", "Account")" class="btn-acceso">Iniciar Sesión</a>
    </div>
}



